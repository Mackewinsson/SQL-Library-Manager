extends layout

block content

    h1 Update Book
    if errors
        h2(class='error') Ooooops
        ul(class='error')
            each err in errors
                li= err.message
    form(method='post', action=`/books/${book.id}/edit`)
        p
            label(for="title") Title
            if book
                input(name="title" type="text" id="title" value=book.title)
            else
                input(name="title" type="text" id="title")
        p
            label(for="author") Author
            if book
                input(name="author" type="text" id="author" value=book.author)
            else
                input(name="author" type="text" id="author")
        p
            label(for="genre") Genre
            if book
                input(name="genre" type="text" id="genre" value=book.genre)
            else
                input(name="genre" type="text" id="genre")
        p
            label(for="year") Year
            if book
                input(name="year" type="text" id="year" value=book.year)
            else
                input(name="year" type="text" id="year")
        p
            input(type='submit', value='Update Book')
    form(method='post', action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href='/') Cancel
        p
            input(type='submit', value='Delete Book')
