extends layout

block content
  h1= title
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
    each el in books
      tr
        td
          a(href=`/books/${el.id}`) #{el.title}
        td= el.author
        td= el.genre
        td= el.year
      
